---
import "@fontsource-variable/nunito-sans";
// import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Fondo personalizado -->
    <div class="fixed inset-0 -z-10 h-full w-full bg-black">
      <div
        class="absolute inset-0 bg-[linear-gradient(#00ffff15_1px,transparent_1px),linear-gradient(90deg,#00ffff15_1px,transparent_1px)] bg-[size:40px_40px]"
      >
      </div>
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_400px_at_50%_300px,#0000ff15,transparent)]"
      >
      </div>
      <div
        class="absolute bottom-0 h-1/2 w-full bg-gradient-to-t from-[#ff00ff10] to-transparent"
      >
      </div>
    </div>

    <!-- Contenido principal -->
    <div class="relative z-10">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    /* font-family:"Onest Variable", system-ui, sans-serif; */
    font-family: "Nunito Sans Variable", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    background-image: linear-gradient(
        307deg,
        transparent 0%,
        transparent 10%,
        rgba(190, 190, 190, 0.04) 10%,
        rgba(190, 190, 190, 0.04) 64%,
        transparent 64%,
        transparent 100%
      ),
      linear-gradient(
        118deg,
        transparent 0%,
        transparent 11%,
        rgba(190, 190, 190, 0.04) 11%,
        rgba(190, 190, 190, 0.04) 31%,
        transparent 31%,
        transparent 100%
      ),
      linear-gradient(
        73deg,
        transparent 0%,
        transparent 22%,
        rgba(190, 190, 190, 0.04) 22%,
        rgba(190, 190, 190, 0.04) 90%,
        transparent 90%,
        transparent 100%
      ),
      linear-gradient(
        156deg,
        transparent 0%,
        transparent 51%,
        rgba(190, 190, 190, 0.04) 51%,
        rgba(190, 190, 190, 0.04) 97%,
        transparent 97%,
        transparent 100%
      ),
      linear-gradient(90deg, rgb(0, 0, 0), rgb(0, 0, 0));
    color: white;
  }
</style>
