---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../components/icons/BriefCase.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
// import About from "../components/About.astro";
import UsersIcon from "../components/icons/UsersIcon.astro";
import Technology from "../components/Technology.astro";
// import AvatarImg from '../../assets/Avatar.jpeg'
---

<Layout title="Porfolio de juani - Desarrollador y Programador Web.">
  <main>
    <SectionContainer id="top" class="">
      <Hero />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex items-center gap-x-2 text-[#518eeb]"
      >
        <BriefCase class="size-6" />
        Experiencia
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex items-center gap-x-2 text-[#518eeb]"
      >
        <CodeIcon class="size-6" />
        Proyectos personales
      </h2>
      <Projects />
    </SectionContainer>

    <!-- <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex items-center gap-x-2 text-[#518eeb]"
      >
        <UsersIcon class="size-6" />
        Sobre mí
      </h2>
      <About />
    </SectionContainer> -->

    <SectionContainer id="tecnologias">
      <h2
        class="text-3xl font-semibold mb-6 flex items-center gap-x-2 text-[#518eeb]"
      >
        <UsersIcon class="size-6" />
        Tecnologías
      </h2>
      <Technology />
    </SectionContainer>
  </main>
</Layout>
